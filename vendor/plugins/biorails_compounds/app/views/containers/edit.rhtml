<fieldset>

<div class="form-title">
    Edit Container [<strong><%=@container.name%></strong>]
</div>

<% form_tag :action => 'update', :id => @container do %>
  <%= render :partial => 'form' %>
  <%= submit_tag l(:Save) %>
<% end %>

<%= link_to 'Show', :action => 'show', :id => @container %> |
<%= link_to 'List', :action => 'list' %>
</fieldset>
