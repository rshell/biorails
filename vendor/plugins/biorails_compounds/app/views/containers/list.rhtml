<h1 class='icon icon-container'>Sample Containers</h1>

<table class="report">
  <tr>
  <% for column in Container.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for container in @containers %>
  <tr>
  <% for column in Container.content_columns %>
    <td><%=h container.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => container %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => container %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => container }, :confirm => l(:text_are_you_sure),:method => "post" %></td>
  </tr>
<% end %>
</table>

<div class='panel'>
<%= link_to 'New ', :action => 'new' %>
  <%= will_paginate @containers %>	
</div>
