<% content_for :messages do -%>
<%= render :partial => 'shared/messages', :locals => { :objects => ['project_folder','project_element']}  %>
<%end %>

<% content_for :center do -%>
<br/>
<h2>
Content Path: 
    <%= link_to "/"+ @project_folder.path, folder_url( :action => 'show',:id=>@project_folder) if  @project_folder%>
    <%= "/"+ ( @project_element ? @project_element.name : 'save article') %>
</h2>    
    <div id='<%=@project_element.dom_id(:current)%>' class='box'>  
    <%= render :partial => 'show' %>
    </div>
    <%= render :partial => 'history' %>
<% end %>

<% content_for :right do -%>
  <%= render :partial => 'project/folders/right_tree',:locals=>{:folder=>@project_folder} %>
<% end %>