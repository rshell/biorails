<%= javascript_include_tiny_mce_if_used %>
<%= tiny_mce if using_tiny_mce? %>


    <!--[form:experiment]-->
  <div class="row">

     <div class="form-element">
      <label for="experiment_study_id">Study</label>
     <%= select_study(:experiment, :study_id) %>
     
     <%= observe_field 'experiment_study_id',:url => {:action =>'refresh_allowed_protocols'},  :update =>@experiment.dom_id('protocols') %>
     
     </div>

     <div class="form-element">
      <label for="experiment_name">Name</label>
      <%= text_field 'experiment', 'name' , {:class=>"text-input"} %>
     </div>


     <div class="form-element">
      <label for="study_parameter_role">Default Protocol</label>
      <div id="<%=@experiment.dom_id('protocols')%>">
       <%= select_protocol(:experiment, :study_protocol_id, @study) %>
       </div>
     </div>


    
  </div>

  <div class="row">

   <div class="form-element">
     <label for="study_description">Description</label>
     <%= text_area('experiment', 'description',{:rows=>5, :cols=>100} 	) %>
   </div>

  </div>

<!--[eoform:experiment]-->
