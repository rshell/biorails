<h1 class="icon icon-user-large" style="text-indent:0.5em"><%=@user.name%>'s Calendar</h1>
<%  started = Date.civil(2007,3,1)  %>

<%= month_navigator(@calendar)  %>

<% calendar(@calendar) do |item|  %>

 <small class="icon icon-<%=item.class.table_name.singularize%>-small"> <%=link_to_object( item )%>  </small>
 <span class='tip'>
   <strong> <%=item.class.to_s %>  <%=item.name%> [<%=item.status%>] </strong>
   <ul>
     <li>Started: <%= short_date item.started_at %></li>
     <li>Expected: <%= short_date item.expected_at %></li>
     <li>Ended: <%= short_date item.ended_at  %></li>
   </ul>
   <%= item.description if item.respond_to?(:description) %>
   <%= item.summary  if item.respond_to?(:summary) %>
 </span>

<% end %>